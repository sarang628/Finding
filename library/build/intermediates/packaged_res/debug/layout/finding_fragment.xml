<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

                 
                          
                                                                    

                                                                    

                                           
           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.screen_finding.finding.FindFragment" android:tag="layout/finding_fragment_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <!-- map  -->
        <fragment
            android:id="@+id/map_container"
            class="com.example.screen_map.MapsFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:defaultNavHost="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/btn_mylocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:tag="binding_1"                                                                                
            android:visibility="visible"
            app:borderWidth="0dp"
            app:elevation="6dp"
            app:icon="@android:drawable/ic_menu_mylocation"
            app:layout_constraintBottom_toTopOf="@+id/card_page_container"
            app:layout_constraintEnd_toEndOf="parent" />

        <fragment
            android:id="@+id/card_page_container"
            class="com.example.cardinfo.RestaurantInfoCardFragment"
            android:layout_width="0dp"
            android:layout_height="180dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <!--   filter     -->
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/filter_container"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            app:defaultNavHost="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navGraph="@navigation/nav_filter_parent" />

        <!--  search view   -->
        <ImageView
            android:id="@+id/sv_map"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_search"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_keyword"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/sv_map"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/sv_map"
            app:layout_constraintTop_toTopOf="@+id/sv_map"
            tools:text="Restaurant" />


    </androidx.constraintlayout.widget.ConstraintLayout>
         