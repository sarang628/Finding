<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.example.torang_core.data.model.MapMode" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.screen_finding.finding.FindFragment">

        <!-- map  -->
        <fragment
            android:id="@+id/map_container"
            class="com.example.screen_map.MapsFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:defaultNavHost="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/toggle_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/colorSecondaryLight"
            android:src="@android:drawable/ic_menu_compass"
            android:visibility="visible"
            app:borderWidth="0dp"
            app:elevation="6dp"
            app:layout_constraintBottom_toTopOf="@+id/toggle_btn1"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/toggle_btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/colorSecondaryLight"
            android:src="@android:drawable/ic_menu_sort_by_size"
            android:visibility="visible"
            app:borderWidth="0dp"
            app:elevation="6dp"
            app:layout_constraintBottom_toTopOf="@+id/toggle_btn"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/toggle_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/colorSecondaryLight"
            android:src="@android:drawable/ic_menu_mylocation"
            android:visibility="visible"
            app:borderWidth="0dp"
            app:elevation="6dp"
            app:layout_constraintBottom_toTopOf="@+id/card_page_container"
            app:layout_constraintEnd_toEndOf="parent" />

        <fragment
            android:id="@+id/card_page_container"
            class="com.example.screen_finding.cardinfo.CardInfoFragment"
            android:layout_width="0dp"
            android:layout_height="180dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <!--   filter     -->
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/filter_container"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            app:defaultNavHost="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navGraph="@navigation/nav_filter_parent" />

        <!--  search view   -->
        <ImageView
            android:id="@+id/sv_map"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_search"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_keyword"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/sv_map"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/sv_map"
            app:layout_constraintTop_toTopOf="@+id/sv_map"
            tools:text="Restaurant" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>